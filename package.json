{
  "name": "@wopr-network/wopr-plugin-bluebubbles",
  "version": "1.0.0",
  "description": "BlueBubbles iMessage/SMS bridge plugin for WOPR",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check --config-path=. src/",
    "lint:fix": "biome check --config-path=. --fix src/",
    "format": "biome format --config-path=. --write src/",
    "check": "biome check --config-path=. src/ && tsc --noEmit",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "socket.io-client": "^4.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0",
    "semantic-release": "^24.0.0",
    "@wopr-network/semantic-release-config": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wopr",
    "wopr-plugin",
    "bluebubbles",
    "imessage",
    "sms",
    "bridge"
  ],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
